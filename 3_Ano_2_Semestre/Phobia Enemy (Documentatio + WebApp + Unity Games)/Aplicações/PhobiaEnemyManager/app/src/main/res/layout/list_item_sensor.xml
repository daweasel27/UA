<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_vj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text="sensor"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_alignTop="@+id/checkBox_sensor"
        android:layout_toRightOf="@+id/checkBox_sensor"
        android:layout_toEndOf="@+id/checkBox_sensor" />

    <CheckBox

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   "
        android:id="@+id/checkBox_sensor"
        android:checked="false"
        android:clickable="false"
        android:contextClickable="false"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="turn on"
        android:id="@+id/button_turnOn"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="----------"
        android:id="@+id/textView_tv"
        android:layout_alignBottom="@+id/button_turnOn"
        android:layout_alignLeft="@+id/textView_vj"
        android:layout_alignStart="@+id/textView_vj" />

</RelativeLayout>